<Window x:Class="AdventOfCode2020.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
            <ContentControl prism:RegionManager.RegionName="Day1Region" Visibility="Collapsed" />
            <ContentControl prism:RegionManager.RegionName="Day2Region" Visibility="Collapsed"/>
            <ContentControl prism:RegionManager.RegionName="Day3Region" Visibility="Collapsed"/>
            <ContentControl prism:RegionManager.RegionName="Day4Region" Visibility="Collapsed"/>
            <ContentControl prism:RegionManager.RegionName="Day5Region" Visibility="Collapsed"/>
            <ContentControl prism:RegionManager.RegionName="Day6Region" />
        </StackPanel>
    </ScrollViewer>
</Window>
